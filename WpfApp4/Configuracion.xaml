<Window x:Class="WpfApp4.Configuracion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="Configuracion" Height="235" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" >
    <Grid Background="#FFFFF7C1" Margin="0,0,0,-16">
        <Grid Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Ruta para registro de piezas:"/>
            <TextBox x:Name="TextoRutaPiezas" Grid.Row="1" Width="300" Margin="0,5,30,36" KeyUp="EnterDirectorioPiezas" Text="" IsReadOnly="True" Grid.RowSpan="2" />
        </Grid>
        <Label Content="Ruta para el registro de urgentes:" HorizontalAlignment="Left" Margin="5,92,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="10,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Name="TextoRutaUrgentes" KeyUp="EnterDirectorioUrgentes" IsReadOnly="True"/>
        <Button Content="Guardar" HorizontalAlignment="Left" Margin="233,172,0,0" VerticalAlignment="Top" Width="77" Name="BotonGuardarDirectorios" Click="BotonGuardarDirectoriosClick" RenderTransformOrigin="0.476,0.186"/>
        <Button Content="Abrir directorio" HorizontalAlignment="Left" Margin="25,64,0,0" VerticalAlignment="Top" Height="20" Width="96" Name="AbrirDirectorioPiezasBoton" Click="AbrirDirectorioPiezasClick"/>
        <Button Content="Abrir directorio" HorizontalAlignment="Left" Margin="27,154,0,0" VerticalAlignment="Top" Width="94" Name="AbrirDirectorioUrgentesBoton" Click="AbrirDirecorioPiezasUrgentesBoton"/>
    </Grid>
</Window>
